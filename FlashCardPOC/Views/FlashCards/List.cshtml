                @Html.DisplayFor(modelItem => item.style)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.answer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numAttempts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numRight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numWrong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.percentageRight)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
